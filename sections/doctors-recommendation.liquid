<script>
  document.addEventListener( 'DOMContentLoaded', function() {
    var splide = new Splide( '#dr-recommendations',{
            type: 'loop',
        arrows: true,
      pagination:false,
  perPage: 2,
  breakpoints: {
      1040: {
			perPage: 2,
		},
		920: {
			perPage: 1,
		},440: {
