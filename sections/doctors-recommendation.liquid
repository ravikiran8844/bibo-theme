  } );
</script>


{% schema %}
  {
    "name": "Doctors Recommendation",
    "class": "doctors-recommendation section",
    "tag":"section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "heading"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "subheading",
        "default": "subheading"
      }, {
            "type": "text",
            "id": "bottom-text",
            "label": "Bottom Text"
          }
    ],
    "blocks": [
      {
        "name": "block",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "name",
            "label": "Name",
            "default": "Name"
          }, {
            "type": "text",
            "id": "caption",
            "label": "caption",
            "default": "caption"
          }, {
            "type": "text",
            "id": "text",
            "label": "text",
            "default": "text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Doctors Recommendation"
      }
    ]
  }
{% endschema %}