<script defer src="https://cdn.jsdelivr.net/npm/@splidejs/splide@3.6.9/dist/js/splide.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@3.6.9/dist/css/splide.min.css">



<div class="dr-section container py-5">
  <div class="col-12">
    <div class="dr-section_title">{{ section.settings.heading }}</div>
    <div class="dr-section_text mb-5 h5">{{ section.settings.subheading }}</div>
  </div>
  <div id="dr-recommendations" class="splide">
    <div  class="splide__track">
  <div class="doctor-slider splide__list">
    {% for block in section.blocks %}
      <div class="mb-4 p-3 splide__slide">
        <div class="dr-section_item d-flex p-5">
          <div class="dr-section_item-content">
            <div class="dr-section_item-title">{{ block.settings.name }}</div>
            <div class="dr-section_item-caption pe-2 mb-4">{{ block.settings.caption }}</div>
            <div class="dr-section_item-text">{{ block.settings.text }}</div>
          </div>
          <div class="dr-section_item-img">
            <img
              class="img-fluid"
              width="270"
              height="337"
              loading="lazy"
              src="{{block.settings.image |img_url: 'master' }}"
              alt="">
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
  </div>
  {% if section.settings.bottom-text !=blank %}
  <div class="col-12 text-center d-none d-md-block">
                    <div class="dr-section_bottom-text mt-4">{{ section.settings.bottom-text }}</div>
    </div>
  {% endif %}
</div>

