<div class="fluid-container">
  <div class="row g-0">
    <div class="col-12 col-md-5 order-1 order-md-0 d-flex align-items-end">
      <img class="img-fluid" src="{{section.settings.image |  image_url: width: 716 }}" alt="">
    </div>
    <div class="col-12 col-md-7 order-0 order-md-1 d-flex  justify-content-center align-items-center">
      <div class="bibo-banner-section_content text-center my-5">
        <div class="bibo-banner-section_title mb-4">
          {{ section.settings.title }}
        </div>
        <div class="bibo-banner-section_text mb-5">
          {{ section.settings.text }}
        </div>
        <div class="bibo-banner-section_btn">
          <a class="custom-btn px-5 py-3" href="{{section.settings.btn_link}}">
            {{ section.settings.btn_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>




