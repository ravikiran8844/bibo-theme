<style>
      .multi-tab-faq-section {
          background: #FFE7D9;
      }

      .multi-tab-faq-section .main-heading {
          color: #000;
          text-align: center;
          font-family: Urbanist;
          max-width: 603px;
          margin: auto;
      }

      .multi-tab-faq-section .tabs {
          display: flex;
          flex-wrap:wrap;
          justify-content: center;
          gap: 5px;
          margin-bottom: 30px;
      }


      @media (min-width:768pc) {
          .multi-tab-faq-section .tabs {
          display: flex;
          justify-content: center;
          gap: 20px;
          margin-bottom: 30px;
      }

      }

      .multi-tab-faq-section .tab {
          border-radius: 11px;
          border: 2.5px solid #54b5a9;
          padding: 5px 10px;
          cursor: pointer;
          box-shadow: 4px 8px 11px 0 rgba(37, 78, 78, 0.1);
          color: #275c5c;
          font-family: Poppins;
      }

      .multi-tab-faq-section .accordion {
          display: none;
          max-width: 756px;
          margin: auto;
      }

      .multi-tab-faq-section .faq:first-child {
          border-top: 2px solid #54b5a9;
          padding: 15px 0;
      }

      .multi-tab-faq-section .faq {
          border-bottom: 2px solid #54b5a9;
          padding: 15px 0;
      }

      .multi-tab-faq-section .question {
          cursor: pointer;
          color: #181818;
          font-family: Poppins;
          font-size: 18px;
          font-style: normal;
          font-weight: 600;
          line-height: normal;
          display: flex;
          justify-content: space-between;
          align-items: center;
      }

      .multi-tab-faq-section .question::after {
          content: '+';
          min-width: 20px;
          min-height: 20px;
          height: 20px;
          width: 20px;
          color: #EB752C;
          font-size: 18px;
          text-align: center;
          border-radius: 50px;
          display: flex;
          justify-content: center;
          align-items: center;
      }

      .multi-tab-faq-section .question.open::after {
          content: 'x';
          min-width: 20px;
          min-height: 20px;
          height: 20px;
          width: 20px;
          color: #EB752C;
          font-size: 18px;
          text-align: center;
          border-radius: 50px;
          display: flex;
          justify-content: center;
          align-items: center;
      }

      .multi-tab-faq-section .answer {
          display: none;
          margin-top: 5px;
          font-family: Poppins;
          font-size: 16px;
      }
      .custom-border {
      position: relative;
      display: inline-block;
      padding-bottom: 10px; /* Adjust as needed for spacing */
      background: url('https://cdn.shopify.com/s/files/1/0551/8157/4300/files/Vector_142_1.png?v=1699629639') center bottom no-repeat;
      background-size: contain; /* or cover, based on your preference */
  }
</style>

<div class="multi-tab-faq-section">
  <div class="container">
    <div class="row">
      <div class="col-12 py-5">
        <div class="mb-5 text-center">
          <div class="main-heading display-4 fw-medium">
            <span class="custom-border fw-semibold">Sinusitis</span> Questions?
          </div>
        </div>
        <div class="tabs">
          <div class="tab fw-semibold fs-5" id="tab1">
            {{ section.settings.tab1 }}
          </div>
          <div class="tab fw-semibold fs-5" id="tab2">
            {{ section.settings.tab2 }}
          </div>
          <div class="tab fw-semibold fs-5" id="tab3">
            {{ section.settings.tab3 }}
          </div>
        </div>

        <div class="accordion" id="accordion1">
          <div class="faq">
            <div class="question">Question 1</div>
            <div class="answer">Answer 1</div>
          </div>
          <div class="faq">
            <div class="question">Question 2</div>
            <div class="answer">Answer 2</div>
          </div>
          <div class="faq">
            <div class="question">Question 3</div>
            <div class="answer">Answer 3</div>
          </div>
        </div>

        <div class="accordion" id="accordion2">
          <div class="faq">
            <div class="question">Question 1</div>
            <div class="answer">Answer 1</div>
          </div>
          <div class="faq">
            <div class="question">Question 2</div>
            <div class="answer">Answer 2</div>
          </div>
          <div class="faq">
            <div class="question">Question 3</div>
            <div class="answer">Answer 3</div>
          </div>
          <div class="faq">
            <div class="question">Question 4</div>
            <div class="answer">Answer 4</div>
          </div>
        </div>

        <div class="accordion" id="accordion3">
          <div class="faq">
            <div class="question">Question 1</div>
            <div class="answer">Answer 1</div>
          </div>
          <div class="faq">
            <div class="question">Question 2</div>
            <div class="answer">Answer 2</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const tabs = document.querySelectorAll('.tab');
  const accordions = document.querySelectorAll('.accordion');
  const questions = document.querySelectorAll('.question');

  // Show the content of the first tab by default
  accordions[0].style.display = 'block';
  tabs[0].classList.add('active');

  // Handle tab click event
  tabs.forEach((tab, index) => {
      tab.addEventListener('click', () => {
          // Hide all accordions
          accordions.forEach((accordion) => {
              accordion.style.display = 'none';
          });

          // Show the corresponding accordion
          accordions[index].style.display = 'block';

          // Update tab styles
          tabs.forEach((tab) => {
              tab.classList.remove('active');
          });
          tab.classList.add('active');

          // Collapse all questions in the selected accordion
          const selectedAccordionQuestions = accordions[index].querySelectorAll('.question');
          selectedAccordionQuestions.forEach((question) => {
              question.nextElementSibling.style.display = 'none';
          });
      });
  });

  // Handle question click event
  questions.forEach((question) => {
      question.addEventListener('click', function () {
          const answer = this.nextElementSibling;

          // Collapse all questions except the clicked one within the same accordion
          const accordion = this.closest('.accordion');
          const accordionQuestions = accordion.querySelectorAll('.question');
          accordionQuestions.forEach((q) => {
              if (q !== this) {
                  q.nextElementSibling.style.display = 'none';
                  q.classList.remove('open');
              }
          });

          // Toggle the display of the clicked question's answer
          if (answer.style.display === 'block') {
              answer.style.display = 'none';
              question.classList.remove('open');
          } else {
              answer.style.display = 'block';
              question.classList.add('open');
          }
      });
  });
</script>

