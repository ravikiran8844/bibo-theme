<div class="container px-5 py-1 acc-{{section.id}}">
  <div class="col-12">
    <div class="accordion accordion-flush" id="accordion-{{section.id}}">
      <div class="accordion-item py-2">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseOne-{{section.id}}"
            aria-expanded="false"
            aria-controls="flush-collapseOne-{{section.id}}">
            {{ section.settings.heading }}
          </button>
        </h2>
        <div
          id="flush-collapseOne-{{section.id}}"
          class="accordion-collapse collapse"
          data-bs-parent="#accordion-{{section.id}}">
          <div class="accordion-body">
            <div class="ingredients-section">
              {% if section.settings.text!=blank %}
                <div>{{ section.settings.text }}</div>
              {% endif %}
                <div class="row gx-4">
                {% for block in section.blocks %}
                  <div class="col-12 col-lg-6 mb-5 ingredient-item-{{forloop.index}}">
                    <div class="ingredient-item-bg cis_item d-flex flex-column flex-md-row justify-content-between align-items-center">
                      <div class="ingredient-item-img-wrapper">
                        <img
                          class="img-fluid"
                          loading="lazy"
                          src="{{block.settings.logo | img_url: 'master'}}"
                          alt="ingredient">
                      </div>
                      <div class="px-3 cis_item-text">
                        {{ block.settings.text }}
                      </div>
<!--                       <div>
                        <div class="cis_overlay">i</div>
                      </div> -->
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  .ingredient-item-bg{
    border-radius: 27px;
  background: #F9F9F9;
    height:100%;
    padding:20px 10px;
  }
  .ingredient-item-img-wrapper{
    min-width:200px;
  }
  .accordian-section {
        background-color: #fff !important;
  }
  .accordian-section .accordion {
    border-bottom: 1px solid #275C5C;
    border-top:none !important;
    margin-top:0 !important;
  }
  .accordian-section .accordion-button:focus {
    border-color: none;
    outline: none;
    box-shadow: none;
  }
  .accordian-section .accordion-button:not(.collapsed) {
    color: #275C5C;
    box-shadow: none;
    background-color: #fff;
  }
  .accordian-section .accordion-button {
    color: #275C5C;
    font-family: Poppins;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
  }
  @media(min-width:768px) {
    .accordian-section .accordion-button {
      color: #275C5C;
      font-family: Poppins;
      font-size:28px;
      font-style: normal;
      font-weight: 500;
      line-height: 137.523%; /* 44.007px */
    }
  }

  .accordian-section .accordion-button::after {
    content: "+";
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: initial;
    width: 23px;
    height: 23px;
    flex-shrink: 0;
    color: #EB752C;

  }

  .accordian-section .accordion-button:not(.collapsed)::after {
    content: "-";
    color: #EB752C;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: initial;
    width: 23px;
    height: 23px;
    flex-shrink: 0;
  }
</style>

<style>
  .ingredients-section {
    background-color: #fff;
  }
  .ingredients-section b {
    font-weight: 700 !important;
  }
  .ingredients-section .row .col-md-6 {
    border-bottom: 1px solid #D8D8D8;
  }


  .cis_item-text {
    color: #535353;
    font-family: Poppins;
    font-size: 15px;
    font-style: normal;
    font-weight: 400;
    line-height: 26.5px;
    letter-spacing: 0.32px;
  }

  .cis_overlay {
    color: #FFF;
    text-align: center;
    font-family: Roboto;
    font-size: 19px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 0.38px;
    text-transform: lowercase;
    height: 26px;
    width: 26px;
    background: #275C5C;
    border-radius: 50px;
  }
</style>

{% schema %}
  {
    "name": "Accordian",
    "class": "section accordian-section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Heading",
        "label": "Heading"
      },
        {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "name": "ingredient",
        "type": "ingredient-block",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Image"
          }, {
            "type": "richtext",
            "label": "Text",
            "id": "text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Accordian"
      }
    ]
  }
{% endschema %}