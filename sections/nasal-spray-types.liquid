{% schema %}
{
  "name": "Nasal Spray Types",
  "class": "nasal-spray-types",
  "tag": "section",
  "settings": [{
    "type": "image_picker",
    "id": "bg_image",
    "label": "Background Image"
  },
    {
      "type": "text",
      "id": "heading",
      "default": "Types of nasal sprays",
      "label": "Heading"
    }

  ],"blocks": [
    {
      "name": "block",
      "type": "block",
      "settings": [
        {
      "type": "text",
      "id": "sub-heading",
      "default": "Saline and natural nasal sprays:",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "product_text",
      "label": "Product Card Text"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Nasal Spray Types"
    }
  ]
}
{% endschema %}
