<script defer src="{{"nasal-spray-types.js" |  asset_url }}"></script>
<div class="container py-5">
  <div class="col-12 text-center">
    <div class="nasal-spray-types_main-title mb-5">{{ section.settings.heading }}</div>
  </div>

  <div class="row nasal-spray-types_items owl-carousel owl-theme" id="nasal-spray-types">
    {% for block in section.blocks %}
      <div class="col-12 nasal-spray-type_item item">
        <div class="nasal-spray-type_item-content">
          <div class="nasal-spray-types_section-title mb-4">
            {{ block.settings['sub-heading'] }}
          </div>
          <div class="nasal-spray-types_section-text mb-4">
            {{ block.settings.text1 }}
          </div>
          <div class="nasal-spray-types_section-sub-title mb-4">
            {{ block.settings.title }}
          </div>
          <div class="nasal-spray-types_section-text mb-4">
            {{ block.settings.text2 }}
          </div>
        </div>
        <div>
          {% assign product = block.settings.product %}

          <div class="card p-3">
            <div class="card-body">
              <div class="text-center mb-4">
                <img
                  width="300"
                  height="300"
                  loading="lazy"
                  class="img-fluid"
                  src="{{product.images.first |  image_url: width:405, height:477 }}"
                  alt=""
                >
              </div>
              <div class="d-flex align-items-center justify-content-between">
                <div class="nasal-spray-type_item-title">
                  {{ product.metafields.custom.product_title }}
                </div>
                <div class="nasal-spray-type_item-title">
                  {{ product.price | money_without_trailing_zeros }}
                </div>
              </div>

              <div class="nasal-spray-type_item-caption">
                {{ product.metafields.custom.product_caption }}
              </div>

              <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                  <span class="me-2">
                    <svg
                      width="126"
                      height="21"
                      viewBox="0 0 126 21"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
