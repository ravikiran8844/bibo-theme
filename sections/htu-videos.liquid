<div class="container p-5">
  <div class="col-12">
    <div class="text-center">
      <h2 class="main-heading mb-5">{{ section.settings.heading }}</h2>
      <div class="main-text mb-3">{{ section.settings.text }}</div>
      <div class="main-caption mb-5">{{ section.settings.caption }}</div>
    </div>
  </div>

  <div class="row g-0">
    {% for block in section.blocks %}
      <div class="col-12 col-md-4 p-2 px-5 mx-auto mb-3 step-{{forloop.index}}">
        <div class="htu-videos-item mb-5">
          <div class="mb-3 htu_video text-center">
            {{
              block.settings.video
              | video_tag: loop: 'loop', muted: true, playsinline: true, autoplay: true, loading: 'lazy'
            }}
            <div class="step-svg-line">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="2"
                height="102"
                viewBox="0 0 2 102"
                fill="none"
              >
                <path d="M1 0.208984L1 101.672" stroke="black" />
              </svg>
            </div>
          </div>
          <div class="content-box text-center">
            <div class="sub-heading mb-3">{{ block.settings.step }}</div>
            <p class="text mb-4">{{ block.settings.text }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

