<script>
    // Get all the list-title elements and list-text elements
const listTitles = document.querySelectorAll('.list-title');
const listTexts = document.querySelectorAll('.list-text');

// Function to hide all list-text elements
function hideAllListTexts() {
    listTexts.forEach((listText) => {
        listText.style.display = 'none';
    });
}

// Function to toggle the display of list-text for a specific element
function toggleListText(index) {
    hideAllListTexts();
    listTexts[index].style.display = 'block';
}

// Add click event listeners to list-title and list-bullet elements
listTitles.forEach((listTitle, index) => {
    listTitle.addEventListener('click', () => {
        toggleListText(index);
    });
});

const listBullets = document.querySelectorAll('.list-bullet');

listBullets.forEach((listBullet, index) => {
    listBullet.addEventListener('click', () => {
        toggleListText(index);
    });
});

// Initially hide all list-text elements except the first one
hideAllListTexts();
listTexts[0].style.display = 'block';

</script>










