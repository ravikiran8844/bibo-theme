{{'blog.css' |  asset_url |  stylesheet_tag}}
  <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

<div class="container pb-5">
    <div class="col-12 mb-4">
        <div class="blog-article-title">What to read next</div>
    </div>

    <div class="row">
        
    {% paginate blog.articles by 6 %}

                {% for article in blog.articles %}
                    <div class="col-12 col-md-6 col-lg-4 mb-4" data-aos="zoom-in">
                        <div class="card latest-blog-posts_card">
                            <div class="card-img-top">
                                <a class="text-decoration-none" href="{{ article.handle }}">
                                    <img
                                        height="210"
                                        width="315"
                                        class="img-fluid w-100 object-fit-cover"
                                        src="{{ article.image | img_url: 'master' }}"
                                        alt="{{ article.title }}"
                                    >
                                </a>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                        By <span class="blog-hightlight-text">{{ article.author }}</span> | <span>{{ article.published_at | date: "%b %d, %Y"}}</span>
                                    </div>
                                    <a class="text-decoration-none " href="{{ article.url }}"><div class="mb-4 blog-article-title">{{ article.title }}</div></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            
            {%- if paginate.pages > 1 -%}
                {%- render 'pagination', paginate: paginate -%}
              {%- endif -%}
        {% endpaginate %}
        

        

    </div>
</div>


<style>
