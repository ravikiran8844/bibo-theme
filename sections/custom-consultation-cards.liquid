<style>

  .card-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .outer-conatiner {
    border: transparent;
    height: 400px;
    width: 100%;
    max-width: 400px;
    border-radius: 25px;

  }

  .first-half {
    background-color: #DBDFFE;
    height: 40%;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;

  }

  @keyframes upperpart {
    50% {
      -webkit-box-shadow: 0 -10px 10px 5px rgba(180, 221, 237, 1);
      -moz-box-shadow: 0 -10px 10px 5px rgba(180, 221, 237, 1);
      box-shadow: 0 -10px 10px 5px rgba(180, 221, 237, 1);
    }
  }

  .second-half {
    display: block !important;
    background-color: antiquewhite;
    min-height: 60%;
    border-bottom-right-radius: 30px;
    border-bottom-left-radius: 30px;

  }

  @keyframes lowerpart {
    50% {
      -webkit-box-shadow: 0 10px 10px 5px rgba(54, 66, 71, 1);
      -moz-box-shadow: 0 10px 10px 5px rgba(54, 66, 71, 1);
      box-shadow: 0 10px 10px 5px rgba(54, 66, 71, 1);
    }
  }

  .img-box {

    height: 100%;
    width: fit-content;
    margin: 0 auto;
  }

  .profile {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    margin-top: 50px;
    border: 3px solid black;
  }

  .info-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .btn-consult {
    display: inline-block;
    outline: 0;
    border: 0;
    cursor: pointer;
    border-radius: 8px;
    padding: 14px 24px 16px;
    font-size: 18px;
    font-weight: 700;
    line-height: 1;
    transition: transform 200ms, background 200ms;
    background: #2C5C60;
    color: white;
    text-decoration: none;
  }

  .btn-consult:hover {
    transform: translateY(-2px);
    color: white;
  }

  @media(min-width: 800px) {

    .outer-conatiner {
      border: transparent;
    }
  }
</style>


