<div class="nasal-main-banner_wrapper">
  <div class="nasal-main-banner_img-wrapper">
    <img
      class="img-fluid"
      src="{{section.settings.overlay_img | img_url: 'master'}}"
      alt="">
  </div>
  <div class="nasal-main-banner_content container">
    <div class="nasal-main-banner_heading mb-4">
      Tailored formulations for all your needs.
    </div>
    <div class="nasal-main-banner_text mb-5">Unmatched Coverage For All Your Needs.</div>
    <div>
      <a class="btn px-5 py-3 nasal-main-banner_btn" href="{{section.settings.link1}}">SHOP NOW</a>
    </div>
  </div>
</div>

<style>
  .nasal-main-banner {
    background-image: url("{{section.settings.main_bg_img | img_url: 'master'}}");

  }
  .nasal-main-banner_wrapper {
    background-image: url("{{section.settings.bg_img | img_url: 'master'}}");
    /* min-height: calc(100vh - 50px);
     */
        min-height: 500px;

    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .nasal-main-banner_img-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
  }
  .nasal-main-banner_img-wrapper img {
    width: 100%;
  }
  .nasal-main-banner_btn,
  .nasal-main-banner_btn:hover {
    border-radius: 8px;
    background: #275C5C;
    box-shadow: 0 4.00153px 10px 0 rgba(0, 0, 0, 0.10);
    color: #FFF;
    text-align: center;
    font-family: Poppins;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    text-transform: uppercase;
    text-decoration: none;
  }
  .nasal-main-banner_content {
    position: absolute;
    max-width: 779px;
    text-align: center;
  }



  .nasal-main-banner_heading {
    color: #FFF;
    text-align: center;
    text-shadow: 9px 4px 7px #C34A00;
    font-family: Urbanist;
    font-size: 36px;
    font-style: normal;
    font-weight: 800;
    line-height: 107%; /* 74.9px */
  }
  .nasal-main-banner_text {
    color: #000;
    font-family: Poppins;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
  }



  @media(min-width:768px) {
    .nasal-main-banner_heading {
      color: #FFF;
      text-align: center;
      text-shadow: 9px 4px 7px #C34A00;
      font-family: Urbanist;
      font-size: 70px;
      font-style: normal;
      font-weight: 800;
      line-height: 107%; /* 74.9px */
    }
    .nasal-main-banner_text {
      color: #000;
      font-family: Poppins;
      font-size: 30px;
      font-style: normal;
      font-weight: 500;
      line-height: normal;
    }
  }

  @media(min-width:1280px) {
    .nasal-main-banner_img-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
    }
  }
</style>


{% schema %}
  {
    "name": "Nasal Main Banner",
    "tag": "section",
    "class": "section nasal-main-banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "main_bg_img",
        "label": "Main Bg Image"
      },
      {
        "type": "image_picker",
        "id": "bg_img",
        "label": "Bg Image"
      },
      {
        "type": "image_picker",
        "id": "overlay_img",
        "label": "Overlay Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Tailored formulations for all your needs."
      }, {
        "type": "text",
        "id": "text",
        "label": "text",
        "default": "Unmatched Coverage For All Your Needs."
      }, {
        "type": "url",
        "id": "link1",
        "label": "Link"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Nasal Main Banner"
      }
    ]
  }
{% endschema %}