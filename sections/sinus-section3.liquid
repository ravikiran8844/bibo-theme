{{"sinus-page.css" |  asset_url |  stylesheet_tag}}

<div class="container p-5">
    <div class="sinus-section3_items">
        <div class="m-auto">
            <div class="sinus-section3_item-content_head mb-5">
                <div class="fs-2 custom-blue-text">Identify your problem</div>
                <div class="display-4 fw-semibold"> How Do <span class="custom-border">I Know</span> I Have Sinusitis?</div>
            </div>
            <div class="fs-4 mb-4">
                Watch for signs like stuffy or runny nose, facial pain, pressure, and headaches. If these symptoms persist, see a doctor for a diagnosis.
            </div>
        
            <div>
                <a href="{{section.settings.button_link}}" class="button text-white">Get help</a>
            </div>

        </div>

        <div>

            <div>
                <img class="img-fluid" width="500" height="450" src="{{section.settings.image |  image_url: width:805 }}" alt="">
            </div>

        </div>

    </div>

</div>




<style>
    .sinus-section3_item-content_head{
        border-left: 8px solid #54B5A9;
        padding-left: 10px;
    }
      .sinus-section3_items{
        display: grid;
        grid-template-columns: 1fr;
        gap: 30px;
    }
  @media (min-width:768px) {
    .sinus-section3_items{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }
  }
</style>




{% schema %}
    {
        "name": "sinus section 3",
        "class": "sinus-section3",
        "tag": "section",
        "settings": [
            {
                "type": "image_picker",
                "label": "Image",
                "id": "image"
            },
            {
                "type": "url",
                "label": "Button Link",
                "id": "button_link"
            }
        ],
        "presets": [
            {
                "name": "sinus section 3"
            }
        ]
    }
    {% endschema %}
    