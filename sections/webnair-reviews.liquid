                <defs>
                  <clipPath id="clip0_835_780">
                    <rect
                      width="98.8702"
                      height="18.8327"
                      fill="white"
                      transform="translate(0.179688 0.187988)" />
                  </clipPath>
                </defs>
              </svg>
            </div>

            <div class="reviews-slider_item-text">
              {{ block.settings.text }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="col-12 text-center">
      <div class="mb-4">
        {% form 'product', product %}
          <div>
            <input
              type="hidden"
              name="id"
              value="{{ product.variants.first.id }}"
            >
            <input
              type="hidden"
              name="quantity"
              value="1"
            >
            <button onclick="window.zecpeCheckFunctionAndCall ? window.zecpeCheckFunctionAndCall('ZecpeCheckVariant', this) : window.location.href = '/cart/checkout'; event.stopPropagation(); event.stopImmediatePropagation();" class="btn buy-now-button">register now</button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
  .reviews-slider  .owl-carousel .owl-stage{display: flex;}
  .reviews-slider .owl-item{
    padding:5px;
  }

  .reviews-slider  .owl-nav{
    display: none;
  }
     .reviews-slider .owl-item{
       padding:5px;
     }
  .reviews-slider{
       background: url('{{section.settings.bg_image | img_url: 'master'}}');
       background-repeat: no-repeat;
       background-size: cover;
     }
   .reviews-slider  .splide__arrow--prev{
       left:0;
     }
     .reviews-slider  .splide__arrow--next{
       right:0;
     }
     .reviews-slider_heading {
       color: #000;
       font-family: Satisfy;
       font-size: 25px;
       font-style: normal;
       font-weight: 400;
       line-height: 128.5%; /* 32.125px */
     }
     .reviews-slider_subheading {
       color: #000;
       text-align: center;
       font-family: Poppins;
       font-size: 13px;
       font-style: normal;
       font-weight: 400;
       line-height: 159.5%; /* 20.735px */
       max-width: 999px;
       margin: auto;
     }
     .reviews-slider_text {
       color: #00A79D;
       text-align: center;
       font-family: Poppins;
       font-size: 11px;
       font-style: normal;
       font-weight: 400;
       line-height: 159.5%; /* 20.735px */
       text-transform: uppercase;

     }
     .reviews-slider_item-img_wrapper {
       width: 50px;
       height: 50px;
       flex-shrink: 0;
     }
     .reviews-slider_item-img_wrapper img {
       max-width: 50px;
       max-height: 50px;
       width: 100%;
       height: 100%;
       border-radius: 50%;
     }
     .reviews-slider_item {
       max-width: 300px;
       height: 100%;
       border-radius: 15.618px;
       border: 0.951px solid #FF7C99;
       background: #FFF;
       padding: 30px 20px !important;
       margin: auto !important;
     }

     .reviews-slider_item-name {
       color: #2C2C2C;
       font-family: Poppins;
       font-size: 16px;
       font-style: normal;
       font-weight: 500;
       line-height: 100%; /* 16px */
     }
     .reviews-slider_item-caption {
       color: #2B2B2B;
       text-align: center;
       font-family: Poppins;
       font-size: 11.414px;
       font-style: normal;
       font-weight: 400;
       line-height: 18.832px; /* 165% */
     }
     .reviews-slider_item-text {
       color: #595959;
       font-family: Poppins;
       font-size: 14px;
       font-style: normal;
       font-weight: 400;
       line-height: 142%; /* 19.88px */
     }

     .reviews-slider .splide__pagination__page.is-active {
       background: #000;
     }

     @media(min-width:768px) {
       .reviews-slider_heading {
         color: #000;
         font-family: Satisfy;
         font-size: 50px;
         font-style: normal;
         font-weight: 400;
         line-height: 128.5%; /* 64.25px */
       }
       .reviews-slider_subheading {
         color: #000;
         text-align: center;
         font-family: Poppins;
         font-size: 18px;
         font-style: normal;
         font-weight: 400;
         line-height: 159.5%; /* 28.71px */
       }
       .reviews-slider_text {
         color: #00A79D;
         text-align: center;
         font-family: Poppins;
         font-size: 16px;
         font-style: normal;
         font-weight: 600;
         line-height: 159.5%; /* 25.52px */

       }

     }
</style>

{% schema %}
{
  "name": "Webnair Reviews",
  "class": "reviews-slider section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }, {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Only the best is good enough!"
    }, {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading",
      "default": "Quality is everything when it comes to ayurveda. Our ingredients are handled with care at every step to ensure you always receive the best quality products."
    }, {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "DON’T BELIEVE US? HERE’S WHAT OUR CUSTOMERS HAVE TO SAY!"
    }

  ],
  "blocks": [
    {
      "name": "review",
      "type": "review-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        }, {
          "type": "text",
          "default": "Name",
          "id": "name",
          "label": "Name"
        }, {
          "type": "richtext",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Webnair Reviews"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var splide = new Splide('#reviews-slider', {
      type: 'loop',
      arrows: true,
      autoplay: true,
      pagination: false,
      perPage: 4,
      breakpoints: {
        1240: {
          perPage: 3
        },
        860: {
          perPage: 2
        },
        560: {
          perPage: 1
        }
      }
    });
    splide.mount();
  });
</script>
