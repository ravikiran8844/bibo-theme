  defer
  src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
  integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
  integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
>
<script defer src="{{'reviews-slider.js' | asset_url}}"></script>

<div class="reviews-slider_wrapper container py-5">
  <div class="row">
    <div class="col-12 text-center">
      <div class="reviews-slider_heading mb-3">{{ section.settings.heading }}</div>
      <div class="mb-4 reviews-slider_subheading">{{ section.settings.subheading }}</div>
      <div class="mb-5 reviews-slider_text">{{ section.settings.text }}</div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="owl-carousel owl-theme list-unstyled" id="reviews-slider">
        {% for block in section.blocks %}
          <div class="p-3 reviews-slider_item">
            <div class="d-flex gap-2">
              <div class="reviews-slider_item-img_wrapper">
                <img
                  loading="lazy"
                  width="50"
                  height="50"
                  alt=""
                  src="{{block.settings.img | img_url: 'master'}}"
                  alt=""
                >
              </div>
              <div>
                <div class="reviews-slider_item-name">{{ block.settings.name }}</div>
                <div>
                  <span class="reviews-slider_item-caption">
                    <svg
                      width="13"
                      height="13"
                      viewBox="0 0 13 13"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <g clip-path="url(#clip0_835_774)">
                        <path d="M6.42092 11.8638C3.46605 11.8638 1.0708 9.46857 1.0708 6.5137C1.0708 3.55882 3.46605 1.16357 6.42092 1.16357C9.3758 1.16357 11.771 3.55882 11.771 6.5137C11.771 9.46857 9.3758 11.8638 6.42092 11.8638ZM5.88752 8.65375L9.67005 4.87067L8.91355 4.11417L5.88752 7.14073L4.37397 5.62718L3.61746 6.38369L5.88752 8.65375Z" fill="#666868" />
                      </g>
                      <defs>
                        <clipPath id="clip0_835_774">
                          <rect
                            width="12.8403"
                            height="12.8403"
                            fill="white"
                            transform="translate(0.000488281 0.0935059)" />
                        </clipPath>
                      </defs>
                    </svg></span
                  >VERIFIED BUYER
                </div>
              </div>
            </div>

            <div class="mt-3 mb-4">
              <svg
                width="100"
                height="20"
                viewBox="0 0 100 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <g clip-path="url(#clip0_835_780)">
                  <path d="M7.13865 6.6753L9.58848 1.75635L12.3323 6.6753L17.4279 7.70006L13.6062 11.6967L14.2921 17.4355L9.58848 14.8736L4.78681 17.4355L5.37477 11.6967L1.74902 7.70006L7.13865 6.6753Z" fill="#FFA944" />
