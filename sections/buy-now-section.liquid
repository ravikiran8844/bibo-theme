    line-height: normal;
  }
</style>

{% schema %}
  {
    "name": "Buy Now Image Banner",
    "class": "section buy-now-section",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "name": "block",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "logo"
          }, {
            "type": "text",
            "id": "title",
            "label": "title",
            "default": "Fortified with Tulsi"
          }, {
            "type": "text",
            "id": "text",
            "label": "text",
            "default": "Tulsi fight bacterial and viral infections."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Buy Now Image Banner"
      }
    ]
  }
{% endschema %}