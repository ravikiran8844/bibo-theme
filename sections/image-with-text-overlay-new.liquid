<div class="fluid-container">
  <div class="col-12 img-text-overlay_wrapper d-flex justify-content-start align-items-center">
    <img
      class="img-fluid d-none d-md-block "
      width="1920"
      height="720"
      loading="lazy"
      src="{{section.settings.img | img_url: 'master'}}"
      alt="">

    <div class="col-12 col-md-7 d-none d-md-block img-text-overlay_content text-center">
      <div class="caption mb-4">{{ section.settings.caption }}</div>
      <div class="main-title mb-4">{{ section.settings.title }}</div>
      <div class="text mb-5 me-auto col-12 col-md-6">{{ section.settings.text }}</div>
      <div>
        {% form 'product', product %}
          <input
            type="hidden"
            name="id"
            value="{{ product.variants.first.id }}">
          <input
            type="hidden"
            name="quantity"
            value="1">
          <button class="btn buy-now-button">BUY NOW</button>
        {% endform %}
      </div>
    </div>
  </div>
  <div class="col-12 d-block d-md-none mobile_wrapper pt-5">
    <div class="text-center">
      <div class="main-title-mobile mb-4">{{ section.settings.mobile_title }}</div>
      <div class="text-mobile ms-auto col-12 col-md-6">{{ section.settings.text }}</div>
   
      <div class="position-relative d-flex flex-column align-items-end">
        <img
          class="img-fluid"
          width="455"
          height="280"
          loading="lazy"
          src="{{section.settings.mobile_img | img_url: 'master'}}"
          alt="">
           <div>
        {% form 'product', product %}
          <input
            type="hidden"
            name="id"
            value="{{ product.variants.first.id }}">
          <input
            type="hidden"
            name="quantity"
            value="1">
          <button class="btn button-mobile mobile-btn-position">BUY NOW</button>
        {% endform %}
      </div>
      </div>
    </div>

  </div>
</div>


