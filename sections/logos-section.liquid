<div class="logos-section container py-5">
  <div class="row g-0">
    <div
      class="col-12 text-center">
      <div class="my-4 main-heading">{{ section.settings.heading }}</div>
      <div class="mb-5 main-text">{{ section.settings.text }}</div>
    </div>
  </div>
  <div class="row col-12 col-lg-10 m-auto g-0 justify-content-between">
    {% for block in section.blocks %}
      <div class="mb-1 logo-item-{{forloop.index}} col-6 col-md-2 p-3">
        <div class="text-center">
          <div class="logo-item-img_wrapper">
            <img
              class="img-fluid"
              
              loading="eager"
              src="{{block.settings.logo | img_url: 'master'}}"
              alt="{{ block.settings.logo-text }}">
          </div>

          <div class="logo-text">{{ block.settings.logo-text }}</div>
        </div>

      </div>
    {% endfor %}


  </div>
</div>

<style>
  .logo-item-4 {
    display: none;
  }
  .logos-section .main-heading {
    color: #275C5C;
    text-align: center;
    font-family: Poppins;
    font-size: 32px;
    font-style: normal;
    font-weight: 600;
    line-height: 119%;
    text-transform: capitalize;
  }
  .logos-section .main-text {
    color: #7C7C7C;
    text-align: center;
    font-family: Poppins;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 140%;
  }
  .logos-section .logo-text {
    max-width: 150px;
    margin: auto;
    color: #2D2D2D;
    text-align: center;
    font-family: Poppins;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 144%;
    text-transform: capitalize;
  }

  @media(min-width:768px) {
    .logo-item-4 {
      display: block;
    }
    .logos-section .main-heading {
      color: #275C5C;
      text-align: center;
      font-family: Poppins;
      font-size: 50px;
      font-style: normal;
      font-weight: 600;
      line-height: 100%;
      text-transform: capitalize;
    }
    .logos-section .main-text {
      color: #7C7C7C;
      text-align: center;
      font-family: Poppins;
      font-size: 20px;
      font-style: normal;
      font-weight: 500;
      line-height: 140%;
    }
    .logos-section .logo-text {
      color: #2D2D2D;
      text-align: center;
    font-family: Poppins;
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 144%;
      text-transform: capitalize;
      margin-top: 10px;
    }
  }
  .logo-item-img_wrapper {
    height: 60px;
    margin: auto;
  }
  .logo-item-img_wrapper img {
    width: auto;
    height: auto;
    max-width:60px !important;
    max-height:60px !important;
  }
  .rk-logos-section {
    background-color: {{ section.settings.bg-color}};
  }


  .logo-item {
    margin-bottom: 20px;
  }
</style>

{% schema %}
  {
    "name": "Logo Section",
    "class": "section rk-logos-section",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "bg-color",
        "label": "Background Color",
        "default": "#F9F9F9"
      }, {
        "type": "text",
        "default": "We Promise You Easy Breathing!",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "default": "Our products are specially curated for a healthy respiratory care regime!",
        "id": "text",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "name": "logo",
        "type": "logo-block",
        "settings": [
          {
            "type": "image_picker",
            "label": "Logo",
            "id": "logo"
          }, {
            "type": "text",
            "label": "Logo Text",
            "id": "logo-text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Section"
      }
    ]
  }
{% endschema %}